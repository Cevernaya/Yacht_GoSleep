<script>
    function keepdice(index) {  
        var temp = document.getElementsByName("keepArray")[index]
        var temp2 = document.getElementsByClassName("dice")[index]
        if (temp.value == 0) {
            temp.value = 1
            temp2.setAttribute("style","background-color: coral")
        }
        else {
            temp.value = 0
            temp2.setAttribute("style","")
        }
    }
